{% extends "layouts/master.twig" %}
{% block content %}
<div class="nav-header py-6 px-4 flex flex-col bg-gray-100 da-bgg relative">
    <div class="nav-title container flex items-center gap-2 md:gap-4">
        <div class="category_title_wrapper">
            <h1 class="category_title text-xl flex gap-2 pe-3 mb-1 da-tm" id="page-main-title">
                نكهات فيب 120 مل
            </h1>
            <nav class="breadcrumbs w-full">
                <ol class="flex items-center flex-wrap text-sm">
                    <li class="whitespace-nowrap"><a href="/" class="fix-align text-primary" aria-label="الرئيسية">الرئيسية</a></li>
                    <li><i class="sicon-keyboard_arrow_left arrow mx-2 text-gray-500 da-ts"></i></li>
                    <li><span class="fix-align text-gray-500 da-ts">نكهات فيب 120 مل</span></li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<div class="container px-2.5 ms:px-5 has-filters">
    <div class="flex items-start flex-col md:flex-row">
        <aside class="filters-menu md:w-52 lg:sticky lg:top-32 flex-none">
            <!-- Filters (categories, brands, rating, price) -->
            {% include 'partials/filters.twig' %}
        </aside>
        <main class="main-content flex-1 w-full ltr:lg:ml-4 rtl:lg:mr-4">
            <div class="prdoucts-list-filters flex justify-between items-center my-4 gap-2">
                <div class="prod-filter flex-1">
                    <div class="flex flex-col md:flex-row gap-1 md:gap-3">
                        <div class="flex items-center">
                            <label class="block mob:hidden me-3 whitespace-nowrap" for="product-filter">ترتيب حسب:</label>
                            <select id="product-filter" class="form-input pt-0 pb-1 pe-10">
                                <option value="ourSuggest">مقترحاتنا</option>
                                <option value="bestSell">الأكثر مبيعًا</option>
                                <option value="topRated">الأعلى تقييمًا</option>
                                <option value="priceFromTopToLow">الأعلى سعرًا</option>
                                <option value="priceFromLowToTop">الأقل سعرًا</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="s-products-list-wrapper s-products-list-filters-results grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                {% for product in products %}
                    {% include 'partials/product-card.twig' with { product: product } %}
                {% endfor %}
            </div>
        </main>
    </div>
</div>
{% endblock %}
