{# Product Card Partial: Faithfully matches original HTML structure, ready for color updates #}
<div class="s-product-card-entry rounded-lg hide-out-of-stock s-product-card-vertical s-product-card-fit-height" style="background-color: rgb(33, 33, 33); border-color: rgb(56, 56, 56); opacity: 1;" id="{{ product.id }}">
    <div class="s-product-card-image grow-0">
        <a class="flex-center h-full w-full" href="{{ product.url }}">
            <img class="s-product-card-image-contain lazy__bg lazy_img lazy loaded" src="{{ product.image }}" alt="{{ product.name }}" style="aspect-ratio:9/9" loading="lazy">
            {% if product.promotion %}
                <div class="s-product-card-promotion-title" style="background-color:#f87e7e">{{ product.promotion }}</div>
            {% endif %}
            {% if product.discount %}
                <div class="s-product-card-discount card-discount font-primary">
                    <span class="off-ratio">{{ product.discount }}%</span>
                </div>
            {% endif %}
        </a>
    </div>
    <div class="s-product-card-content">
        <div class="s-product-card-content-main ">
            <div class="s-product-card-props justify-center text-center">
                <span class="s-product-card-category">{{ product.category }}</span>
                <span class="s-product-card-brand">{{ product.brand }}</span>
            </div>
            <h3 class="s-product-card-content-title text-center line-clamp-1 font-primary">
                <a href="{{ product.url }}">{{ product.name }}</a>
            </h3>
            <p class="s-product-card-content-subtitle text-center">{{ product.brand }}</p>
        </div>
        <div class="s-product-card-content-sub justify-center gap-2 ">
            <div class="s-product-card-sale-price justify-center">
                <h4 class="s-product-card-price">{{ product.price }} <i class="sicon-sar"></i></h4>
                {% if product.price_before %}
                    <span class="s-product-card-price-before">{{ product.price_before }} <i class="sicon-sar"></i></span>
                {% endif %}
            </div>
        </div>
        <div class="s-product-card-content-footer rounded-lg">
            <button type="button" class="s-button-element s-button-btn s-button-primary s-button-wide s-button-loader-center">
                <span class="s-button-text"><i class="text-[16px] sicon-add"></i> أضف للسلة</span>
            </button>
            <button type="button" class="s-product-card-wishlist-btn animated not-added un-favorited s-button-element s-button-icon s-button-outline s-button-light-outline s-button-loader-center">
                <span class="s-button-text"><i class="sicon-heart"></i></span>
            </button>
        </div>
    </div>
</div>
